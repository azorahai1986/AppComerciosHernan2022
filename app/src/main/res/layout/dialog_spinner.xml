<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ingrese la cantidad de productos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24dp"
        android:textColor="?attr/colorAccent"
        android:layout_margin="20dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editCantidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textTittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24dp"
        android:hint="0 unidades"
        android:inputType="number"
        android:gravity="center"
        android:textColor="?attr/colorAccent"
        android:layout_margin="80dp"/>

    <TextView
        android:id="@+id/textAceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACEPTAR"
        app:layout_constraintTop_toBottomOf="@id/editCantidades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24dp"
        android:textColor="?attr/colorAccent"
        android:layout_margin="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CANCELAR"
        app:layout_constraintTop_toBottomOf="@id/textAceptar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24dp"
        android:textColor="@color/purple_700"
        android:layout_margin="20dp"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>